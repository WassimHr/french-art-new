{% extends 'base.html.twig' %}

{% block title %}
	Ajouter un produit
{% endblock %}

{% block body %}

	<main class="container">
		<section class="row">
			<div class="col-6 mx-auto form-product">	
            <h1 class="h1">Ajouter un produit</h1>
                {{form_start(productForm)}}

                {{ form_row(productForm.name) }}
                {{ form_row(productForm.description) }}
                {{ form_row(productForm.price) }}
                {{ form_row(productForm.stock) }}
                {{ form_row(productForm.categories) }}
                {{ form_row(productForm.image) }}

                <div class="text-center">
                 <button type="submit">Ajouter</button>
                </div>
               
                {{form_end(productForm)}}
			</div>
		</section>
	</main>


{% endblock %}
