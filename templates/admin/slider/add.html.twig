{% extends 'base.html.twig' %}

{% block title %}
	Ajouter une image d'accueil
{% endblock %}

{% block body %}

	<main class="container">
		<section class="row">
			<div class="col-6 mx-auto form-product">
				<h1 class="h1 mb-5">Ajouter une image d'accueil</h1>
				{{form_start(sliderForm)}}

				{{ form_row(sliderForm.image) }}
				{{ form_row(sliderForm.ordre) }}

				<div class="text-center">
					<button type="submit" class="submit mt-5">Ajouter</button>
				</div>

				{{form_end(sliderForm)}}
			</div>
		</section>
	</main>


{% endblock %}